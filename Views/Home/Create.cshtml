@{
    ViewData["Title"] = "Create Acitivity";
}
@model Party

<div class="jumbotron">
    <h1>Dojo Activity Center</h1>
    <a href="/home">Home |</a>
    <a href="/logout">Logout</a>
</div>
<div class="body">
    <h1>Create an Activity</h1>
</div>

<form action="create" method="post" class="card card-body bg-light">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Title:</label>
                <input type="text" name="PartyName" placeholder="Activity Name" class="form-control" />
                <span asp-validation-for="PartyName"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Time:</label>
                <input type="time" name="PartyTime" placeholder="Activity Time" class="form-control" />
                <span asp-validation-for="PartyTime"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Date:</label>
                <input type="date" name="PartyDate"  class="form-control" />
                <span asp-validation-for="PartyDate"></span>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Duration:</label>
                <input type="number" name="Duration" placeholder="Duration" class="form-control"/>
                <span asp-validation-for="Duration"></span>
            </div>
        </div>
        <div class="form-group col-sm-2">
            <label>Duration:</label>
            <select class="form-control">
                <option>Minutes</option>
                <option>Hours</option>
                <option>Day(s)</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description">Description:</label>
                <textarea asp-for="Description"name="Description" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <input type="Submit" value="Submit" class="btn btn-primary"/>
</form>